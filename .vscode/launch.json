{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "WolfTrapOysters (Built-in server)",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/router.php",
            "runtimeExecutable": "C:/php8.3/php.exe",
            "runtimeArgs": [
                "-S",
                "127.0.0.1:8081",
                "-t",
                "${workspaceFolder}"
            ],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
